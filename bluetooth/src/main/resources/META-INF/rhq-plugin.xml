<plugin name="Bluetooth"
        displayName="Bluetooth Devices"
        package="org.rhq.plugins.bluetooth"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="urn:xmlns:rhq-plugin"
        xmlns:c="urn:xmlns:rhq-configuration">

   <server name="Bluetooth Devices"
           discovery="BluetoothDiscoveryComponent"
           class="BluetoothDeviceComponent"
           description="Bluetooth Device">

      <version match="1.0"/>

      <runs-inside>
         <parent-resource-type name="Windows"  plugin="Platforms"/>
         <parent-resource-type name="Linux"    plugin="Platforms"/>
         <parent-resource-type name="Solaris"  plugin="Platforms"/>
         <parent-resource-type name="HP-UX"    plugin="Platforms"/>
         <parent-resource-type name="AIX"      plugin="Platforms"/>
         <parent-resource-type name="FreeBSD"  plugin="Platforms"/>
         <parent-resource-type name="Mac OS X" plugin="Platforms"/>
         <parent-resource-type name="Java"     plugin="Platforms"/>
      </runs-inside>

      <plugin-configuration>
          <c:simple-property name="bluetoothAddress"
                           summary="true"
                           activationPolicy="immediate"
                           readOnly="true"
                           required="true"
                           displayName="Bluetooth Address"
                           description="Bluetooth address of the Bluetooth device"/>
         <c:simple-property  name="friendlyName"
                           summary="true"
                           activationPolicy="immediate"
                           readOnly="true"
                           required="true"
                           displayName="Friendly Name"
                           description="a prettier, easier to understand name of the Bluetooth device."/>
         <c:simple-property  name="classDescription"
                           summary="true"
                           activationPolicy="immediate"
                           readOnly="true"
                           required="true"
                           displayName="Device Class Type"
                           description="Name of the Major and Minor Class Description for the discovered device.
                                        This show the type of device from a Printer to a Laptop Computer, from
                                        a Bluetooth Headset to a Video Game System and everything in between"/>
      </plugin-configuration>

      <metric property="bluetoothAddress"
              displayName="Bluetooth Address"
              dataType="trait"
              displayType="summary"
              defaultInterval="3600000"
              units="none"
              defaultOn="true"
              description="Bluetooth address of the Bluetooth device"/>
      <metric property="friendlyName"
              displayName="Friendly Name"
              dataType="trait"
              displayType="summary"
              defaultInterval="3600000"
              units="none"
              defaultOn="true"
              description="a prettier, easier to understand name of the Bluetooth device."/>
      <metric property="classDescription"
              displayName="Device Class Type"
              dataType="trait"
              displayType="summary"
              defaultInterval="3600000"
              units="none"
              defaultOn="true"
              description="Name of the Major and Minor Class Description for the discovered device.
                                        This show the type of device from a Printer to a Laptop Computer, from
                                        a Bluetooth Headset to a Video Game System and everything in between"/>

