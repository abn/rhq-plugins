<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
    
	<parent>
		<groupId>org.jboss.on</groupId>
		<artifactId>jon-parent</artifactId>
		<version>2.2.0-SNAPSHOT</version>
	</parent>
    
	<!--  Plugin poms should not set their parent pom to this artifact. Instead, set to "jon-parent".  This is due to
		the fact that this pom runs integration tests *on* the plugins.  This pom must process in the reactor after the
		plugins themselves, as such, it can't be their parent. -->
	<groupId>org.jboss.on</groupId>
	<artifactId>jon-plugins-parent</artifactId>
	<packaging>pom</packaging>
	<name>JON Plugins</name>
	<description>parent POM for all JON plugins</description>
	
    <scm>
		<connection>scm:svn:https://svn.corp.jboss.com/repos/jon/trunk/jon/plugins</connection>
		<developerConnection>scm:svn:https://svn.corp.jboss.com/repos/jon/trunk/jon/plugins</developerConnection>
	</scm>
	
    <properties>
		<scm.module.path>jon/plugins/</scm.module.path>
	</properties>
    
    <!-- plugins used by both enterprise and embedded -->
	<modules>
		<module>tomcat</module>
		<module>jboss-as</module>
		<module>hibernate</module>        
	</modules>
    
	<build>
		<plugins>
			<plugin>
				<!-- update this to respect the build profiles below -->			
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<configuration>
							<tasks>
								<property name="test.classpath" refid="maven.test.classpath" />
								<echo>Validating plugins...</echo>
								<java classname="org.rhq.core.pc.plugin.PluginValidator" failonerror="true" fork="true">
									<classpath>
										<pathelement path="${test.classpath}" />
										<pathelement location="perftest/target/rhq-perftest-plugin-${project.version}.jar" />
										<pathelement location="hibernate/target/rhq-hibernate-plugin-${project.version}.jar" />
										<pathelement location="tomcat/target/rhq-tomcat-plugin-${project.version}.jar" />
										<pathelement location="jboss-as/target/rhq-jbossas-plugin-${project.version}.jar" />
										<!-- TODO: Figure out why this is causing NoClassDefFoundErrors and fix it. -->
										<!--<pathelement location="jboss-as-5/target/rhq-jboss-as-5-plugin-${project.version}.jar" />-->
										<pathelement location="rhq-server/target/rhq-server-plugin-${project.version}.jar" />
										<pathelement location="oracle/target/rhq-oracle-plugin-${project.version}.jar" />
									</classpath>
									<sysproperty key="org.apache.commons.logging.Log" value="org.apache.commons.logging.impl.SimpleLog" />
								</java>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
    
	<profiles>
        
        <!-- enterprise-only stuff -->
		<profile>
			<id>enterprise</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>			
			<modules>
				<module>rhq-server</module>
				<module>perftest</module>
			</modules>
		</profile>

        <!-- same as enterprise profile, except includes container/dist and embedded-only plugins 
            (activate this for the JON TeamCity build and when tagging JON) -->
		<profile>
			<id>enterprise-dist</id>			
			<modules>            
				<module>rhq-server</module>
				<module>perftest</module>
                <module>mock-jboss</module>
                <!-- NOTE: The jboss-as5 plugin is not included for now, because all its deps are
                           snapshots, which the maven release plugin would deeply frown upon.-->
			</modules>
		</profile>
        
        <!-- includes embedded-only plugins + embedded itself -->
		<profile>
			<id>embedded</id>
			<modules>
                <module>mock-jboss</module>
				<module>jboss-as-5</module>
				<module>jboss-as-5/testsuite</module>
			</modules>
		</profile>
                
	</profiles>
    
</project>