<?xml version="1.0" encoding="UTF-8"?>

<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <!-- JBoss AS 7 -->
  <container qualifier="jbossas7" default="true">
    <configuration>
      <property name="jbossHome">${jboss7.home}</property>
      <!-- Listen on 127.0.0.201, rather than the default of 127.0.0.1 -->
      <property name="javaVmArguments">-Xmx512M -XX:MaxPermSize=128M -Djboss.bind.address.management=127.0.0.201 -Djboss.bind.address=127.0.0.201 -Djboss.bind.address.unsecure=127.0.0.201</property>
      <property name="managementAddress">127.0.0.201</property>
    </configuration>
  </container>

</arquillian>
